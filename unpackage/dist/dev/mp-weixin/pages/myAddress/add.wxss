
 .uni-popup__wrapper-box {
  width: 100%;
  height: 100%;
}
.widthBox {
  width: 68%;
}
.widthBox input {
  font-size: 12px;
}
.widthBox .radio-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
}
.widthBox .radio-group .radio {
  padding: 10rpx 30rpx;
  border-radius: 6rpx;
  border: 1px solid #CCCCCC;
  margin-right: 6px;
}
.widthBox .radio-group .radio.checked {
  background-color: #ADB838;
  color: #ffffff;
  border: 1px solid #ADB838;
}

