.imgPopup .uni-popup {
  background-color: rgba(0, 0, 0, 0.8);
}
.a-shopping-showSku .uni-popup {
  z-index: 999;
}
.a-shopping-showSku .uni-tab__cart-sub-left {
  padding: 0;
}
.van-popupSku {
  font-size: 14px;
}
.van-popupSku .goods-action {
  background: #fff;
  padding: 10px 15px;
}
.van-popupSku .crossIcon {
  position: absolute;
  font-size: 20px;
  right: 10px;
  top: 10px;
}
.van-popupSku .skuTop {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20px;
  border: 1px solid #ebedf0;
}
.van-popupSku .skuTopImg {
  width: 100px;
  height: 100px;
}
.van-popupSku .skuTopImg .van-image,
.van-popupSku .skuTopImg ._img,
.van-popupSku .skuTopImg image {
  width: 100%;
  height: 100%;
}
.van-popupSku .skuTopInfo {
  margin-left: 20px;
}
.van-popupSku .skuTopInfo .skuTopInfoMoney {
  color: #ee0a24;
  font-weight: 500;
  font-size: 22px;
  vertical-align: middle;
  word-wrap: break-word;
}
.van-popupSku .skuTopInfo .skuTopInfoSurplus {
  margin-top: 8px;
  color: #969799;
  font-size: 12px;
  line-height: 16px;
}
.van-popupSku .skuTopInfo .skuTopInfoLimit {
  display: inline-block;
  color: #ee0a24;
  font-size: 12px;
}
.van-popupSku .skuTopChoice {
  padding: 20px;
  border-bottom: 1px solid #ebedf0;
}
.van-popupSku .skuTopChoice .skuTopChoiceTitle {
  padding-bottom: 12px;
  display: block;
}
.van-popupSku .skuTopChoice .skuTopChoiceItem {
  display: inline-block;
  /*min-width: 40px;*/
  margin: 0 12px 12px 0;
  overflow: hidden;
  color: #323233;
  font-size: 13px;
  line-height: 16px;
  vertical-align: middle;
  border-radius: 4px;
  padding: 8px;
  background: #f7f8fa;
}
.van-popupSku .skuTopChoice .partsStyle {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.van-popupSku .skuTopChoice .partsStyle .partsStepper {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.van-popupSku .skuTopChoice .partsStyle .skuTopChoiceItem {
  display: inline-block;
  margin: 0 12px 12px 0;
  overflow: hidden;
  color: #323233;
  font-size: 13px;
  line-height: 16px;
  vertical-align: middle;
  border-radius: 4px;
  padding: 8px;
  background: #f7f8fa;
}
.van-popupSku .skuStepper {
  padding: 15px 20px;
  /*border-bottom: 1px solid #ebedf0;*/
  height: 28px;
  clear: both;
}
.van-popupSku .skuStepper .skuStepperStyle {
  float: right;
}
.van-popupSku .skuBottom {
  overflow: scroll;
  max-height: 50vh;
}

